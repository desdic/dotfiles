[color]
    diff = auto
    status = auto
    branch = auto
    blame = highlightRecent
[color "status"]
    changed = yellow
    added = green
    untracked = red
[core]
    editor = vim
    pager = delta --keep-plus-minus-markers 
    commitGraph = true
[alias]
    co = checkout
    resetdb = reset --soft HEAD
    pu = pull -r
    st = status --short
    spull = ![[ -z $(git status --porcelain -uno) ]] && git pull -r || (git stash && git pull -r && git stash pop)
    lg = log --color --graph --abbrev-commit
[push]
    # default = matching
    default = simple
    autoSetupRemote = true
[pull]
    rebase = true
    ff = only
[gc]
	  writeCommitGraph = true
[delta]
    line-numbers = true
	  features = decorations
	  syntax-theme = gruvbox-dark
[init]
    templateDir = ~/.config/git/template/
	  defaultBranch = main
# Not sure but sometimes this does not work
#[url "git@github.com:"]
#    insteadOf = https://github.com/

[includeIf "gitdir:~/git/"]
    path = ~/.gitconfig-work
[includeIf "gitdir:~/src/"]
    path = ~/.gitconfig-personal
[includeIf "gitdir:~/.config/"]
    path = ~/.gitconfig-personal
[includeIf "gitdir:~/notes/"]
    path = ~/.gitconfig-personal
[url "git@gitlab.one.com:"]
	insteadOf = https://gitlab.one.com/
