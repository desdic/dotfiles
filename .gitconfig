[color]
    diff = auto
    status = auto
    branch = auto
    blame = highlightRecent
[color "status"]
    changed = yellow
    added = green
    untracked = red
[core]
    editor = vim
    pager = delta --keep-plus-minus-markers 
    commitGraph = true
[alias]
    co = checkout
    resetdb = reset --soft HEAD
    pu = pull -r
    st = status --short
    spull = ![[ -z $(git status --porcelain -uno) ]] && git pull -r || (git stash && git pull -r && git stash pop)
    lg = log --color --graph --abbrev-commit
[push]
    # default = matching
    default = simple
    autoSetupRemote = true
[pull]
    rebase = true
    ff = only
[gc]
    writeCommitGraph = true
[include]
	path = ~/.config/delta/catppuccin.gitconfig
[delta]
    line-numbers = true
    features = catppuccin-mocha
[init]
    templateDir = ~/.config/git/template/
    defaultBranch = main
