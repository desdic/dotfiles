// -*- mode: json -*-
{
    "layer": "top",
    "margin-top": 0,
    "margin-bottom": 0,

    "layer": "top",
    "height": 43,
    "margin-left": 0,
    "margin-right": 0,
    "spacing": 0,

    // Modules Left
    "modules-left": [
        "hyprland/workspaces",
        "wlr/taskbar"
    ],

    // Modules Center
    "modules-center": [
      "custom/nowplaying"
    ],

    // Modules Right
    "modules-right": [
        "custom/newmail",
        "idle_inhibitor",
        "wireplumber",
        "group/hardware",
        "clock",
        "tray",
        "custom/notification",
        "custom/space",
    ],

  // Workspaces
  "hyprland/workspaces" : {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
       "1": "  ",
       "2": "  ",
       "3": "  ",
       "4": " 4 ",
       "5": " 5 ",
       "6": " 6 ",
       "7": "  ",
       "8": "  ",
       "9": "  ",
       "10": "  "
    },
    "persistent-workspaces": {
      "*": 3
    }
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "Alacritty",
      "foot",
      "chrome-app.slack.com__client_{{ (bitwardenFields "item" "groupslack").clientid.value }}-Profile_1",
      "chrome-app.slack.com__client_{{ (bitwardenFields "item" "workingasinteded.slack.com").clientid.value }}-Profile_1"
    ],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },

  // System tray
  "tray": {
    //"icon-size": 21,
    "spacing": 10
  },

  // Clock
  "clock": {
    "format": " {:%a %Y-%m-%d - %H:%M}",
    "tooltip-format": "<span size='10pt'><big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt></span>",
    "on-click": "/sbin/google-chrome-stable --app=https://calendar.google.com/calendar/",
    "on-click-right": "/sbin/google-chrome-stable --app=https://outlook.office.com/calendar/view/month",
    "calendar": {
      "mode"          : "year",
      "mode-mon-col"  : 3,
      "weeks-pos"     : "right",
      "on-scroll"     : 1,
      "on-click-right": "mode",
      "format": {
          "months":     "<span color='#ffead3'><b>{}</b></span>",
          "days":       "<span color='#ecc6d9'><b>{}</b></span>",
          "weeks":      "<span color='#99ffdd'><b>W{:%W}</b></span>",
          "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
          "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },

  // CPU
  "cpu": {
    "format": " {usage:2}% "
  },

  // Memory
  "memory": {
    "format": " {}%"
  },

  // Harddisc space used
  "disk": {
    "interval": 30,
    "format": " {percentage_used}% ",
    "path": "/",
    "on-click": "nemo"
  }, 

  // Battery
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "{icon} {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-alt": "{icon}  {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [" ", " ", " ", " ", " "]
  },

  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "",
    "on-click": "pavucontrol",
    "format-icons": ["", ""],
    "scroll-step": 0.2
  },

  "idle_inhibitor": {
    "format": "<span>{icon}</span>",
    "format-icons": {
      "activated": " ",
      "deactivated": " "
    },
    "tooltip": false
  },

  "custom/nowplaying": {
    "interval": 2,
    "format": "{}",
    "max-length": 80,
    "escape": false,
    "exec": "$HOME/.config/hypr/waybar/nowplaying.sh",
    "tooltip": false
  },

  "custom/newmail": {
    "interval": 10,
    "format": "{}",
    "max-length": 80,
    "escape": false,
    "exec": "$HOME/.config/hypr/waybar/newmail",
    "on-click": "/sbin/google-chrome-stable --app=https://mail.one.com",
    "on-click-right": "/sbin/google-chrome-stable --app=https://outlook.office.com/mail",
    "tooltip": false
  },

  "custom/space": {
    "format": " ",
    "tooltip": false
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='green'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='green'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='green'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='green'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

{{ if eq .chezmoi.hostname "hathor" }}
  "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format-critical": "{temperatureC}°C {icon}",
    "format": "{icon} {temperatureC}°C",
    "format-icons": ["", "", ""],
    "tooltip": false
  },
  "custom/gpu": {
    "interval": 10,
    "format": "{}",
    "max-length": 80,
    "escape": false,
    "exec": "$HOME/.config/hypr/waybar/nvidiagpu.sh",
    "tooltip": false
  },
{{ end }}

  // Group Hardware
  "group/hardware": {
      "orientation": "horizontal",
      "modules": [
          "cpu",
          "memory",
          "disk",
{{ if eq .chezmoi.hostname "hathor" }}
          "custom/gpu",
          "temperature",
           "custom/space",
{{ else }}
          "battery", 
{{ end }}
      ]
  }
}
